<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bac_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_txt_shape"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/regular"
            android:maxLines="1"
            android:textColorHint="#D1D1D1D1"
            android:hint="Title..."/>

        <EditText
            android:id="@+id/et_SubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_txt_shape"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/regular"
            android:textColorHint="#D1D1D1D1"
            android:maxLines="1"
            android:hint="Subtitle..."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pRed"
                android:layout_width="25dp"
                android:background="@drawable/red_dot"
                android:layout_height="25dp"/>

            <ImageView
                android:id="@+id/pYellow"
                android:layout_width="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/yellow_dot"
                android:layout_height="25dp"/>

            <ImageView
                android:id="@+id/pGreen"
                android:layout_width="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/green_dot"
                android:layout_height="25dp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/et_note"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/edit_txt_shape"
            android:padding="15dp"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/regular"
            android:textColorHint="#D1D1D1D1"
            android:hint="Notes..."/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEditSaveNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="26dp"
        android:layout_gravity="bottom|right"
        android:backgroundTint="@color/red_color"
        android:src="@drawable/ic_baseline_check_24" />
</FrameLayout>