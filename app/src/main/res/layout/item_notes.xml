<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#707070"
        app:cardCornerRadius="10dp">

        <View
            android:id="@+id/view_Priority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/red_dot"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_NotesTitle"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:maxLines="1"
                android:textSize="17sp"
                android:fontFamily="@font/bold"/>

            <TextView
                android:id="@+id/tv_NotesSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="akdgjakl;gaklgnklnvSALKJNDJHG;JFADHGGIOJGIODJA;LGFJFH;ALJF'ALJF;LKAJFIlknalkji"
                android:textColor="#D8D8D8"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/regular"/>

            <TextView
                android:id="@+id/tv_NotesDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 Jan 2022"
                android:textColor="@color/white"
                android:maxLines="1"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>